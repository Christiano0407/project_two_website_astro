---

//import { ProductList } from "../ts/interfaces";
import { fullProducts } from "../ts/apiContent";


const products = await fullProducts(); 

---

<div class="w-full p-3 grid grid-cols-3 md:grid-cols-4  grid-flow-row gap-5 mx-auto my-5">
  {
    products.slice(0, 8).map(product => ( 
      <div class="w-full border rounded-lg p-3">
        <figure class="p-2" >
          <img class="w-full h-full object-cover bg-no-repeat sm:aspect-square  md:aspect-video " src={product.images[0]} alt={product.title} />
        </figure>
        <div class="card-body">
          <h3 class="card-title">{product.title}</h3>
          <p class="text-secondary">{product.description}</p>
        </div>
      </div>
    ))
  }
</div>
