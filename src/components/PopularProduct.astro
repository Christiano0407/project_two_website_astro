import { fullProducts } from "../ts/apiContent";


const products = await fullProducts(); 

---

{
  products.slice(0, 5).map(product => ( 
 <div class="w-[250px] h-[200px] border rounded-lg flex flex-col p-3">
  <figure>
    <img src={product.images[0]} alt={product.title} />
  </figure>
  <div class="card-body">
    <h3 class="card-title">{product.title}</h3>
    <p class="text-secondary">{product.description}</p>
  </div>
 </div>
  ))
}
