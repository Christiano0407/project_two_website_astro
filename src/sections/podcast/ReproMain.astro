<section class="fixed w-full h-[10rem] p-[1rem] bottom-0 z-10 shadow-md bg-[#3D58F2]">
  <div class="flex items-center justify-evenly w-full h-full " >
  
    <!-- User Photo -->
    <div class="mx-[2rem] my-0" >
       <figure class="w-[4rem] md:w-[8rem] h-[4rem] md:h-[8rem] ">
         <img class="w-full h-full object-cover bg-cover bg-no-repeat bg-center rounded-xl shadow-md aspect-square md:aspect-video " src="../../../src/assets/img/web/web_3.jpg" alt="images_web_podcast"  />
       </figure>
    </div>

    <!-- Music Player Controls -->
     <div class="m-0 my-[2rem] p-[1rem]">
      <div class="flex flex-col items-center space-y-3">
        <div class="flex space-x-3">
          <button class="bg-[#f8f8f8] p-2 rounded-full hover:bg-gray-600">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 5l7 5-7 5V5z"></path>
            </svg>
          </button>
          <button class="bg-[#f8f8f8] p-2 rounded-full hover:bg-gray-600">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm-3-8a1 1 0 112 0 1 1 0 01-2 0zm4-1a1 1 0 10-2 0v3a1 1 0 002 0V9zm0 5a1 1 0 11-2 0 1 1 0 012 0z" clip-rule="evenodd"></path>
            </svg>
          </button>
          <button class="bg-[#f8f8f8] p-2 rounded-full hover:bg-gray-600">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
              <path fill-rule="evenodd" d="M4.293 5.293a1 1 0 011.414 0L10 9.586l4.293-4.293a1 1 0 011.414 1.414L11.414 11l4.293 4.293a1 1 0 01-1.414 1.414L10 12.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 11 4.293 6.707a1 1 0 010-1.414z" clip-rule="evenodd"></path>
            </svg>
          </button>
          <button class="bg-[#f8f8f8] p-2 rounded-full hover:bg-gray-600">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
              <path d="M11 5v10l-7-5 7-5zm2 0v10l7-5-7-5z"></path>
            </svg>
          </button>
        </div>
      </div>
     </div>

    <!-- Playback Bar and Audio Controls -->
     <div class="my-0 mx-[2rem] p-[1rem]">
      <div class="flex space-y-2 justify-avenly ">
        <div class="flex items-center justify-between mx-3 ">
          <span class="text-xs text-[#f8f8f8] brightness-50 font-medium ">0:00</span>
          <input type="range" class="w-full h-1 mx-2 rounded-lg" min="0" max="100" value="0">
          <span class="text-xs  text-[#f8f8f8] brightness-50 font-medium ">3:30</span>
        </div>
        <div class="flex items-center space-x-3 mr-3">
          <button class="bg-[#f8f8f8] p-2 rounded-full hover:bg-gray-600">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
              <path d="M9 7H5v6h4l5 4V3l-5 4z"></path>
            </svg>
          </button>
          <button class="bg-[#f8f8f8] p-2 rounded-full hover:bg-gray-600">
            <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20">
              <path d="M5 3a1 1 0 011.707-.707L10 5.586 14.293 1.293a1 1 0 011.414 1.414l-4 4a1 1 0 01-1.414 0l-4-4A1 1 0 015 3zm10 10.707L10 14.414l-4.293 4.293A1 1 0 114.293 17l4-4a1 1 0 011.414 0l4 4A1 1 0 0115 17z"></path>
            </svg>
          </button>
        </div>
      </div>
     </div>
  
    </div>
</section>